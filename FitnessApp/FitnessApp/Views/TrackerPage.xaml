<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FitnessApp.Views.TrackerPage"
             xmlns:views="clr-namespace:FitnessApp.Views"
             xmlns:viewModels="clr-namespace:FitnessApp.ViewModels"
             BackgroundColor="#32353B">
    
    <ContentPage.BindingContext>
        <viewModels:TrackerPageViewModel></viewModels:TrackerPageViewModel>
    </ContentPage.BindingContext>
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Welcome to Tracker Page!"
            VerticalOptions="CenterAndExpand" 
            HorizontalOptions="CenterAndExpand" />

        <StackLayout Margin ="20" HorizontalOptions="CenterAndExpand">
            <Label Text="Tracker" FontSize="Title" TextColor="WhiteSmoke"></Label>
            <StackLayout>
                <Grid>
                    <Button Text="Profile" Command="{Binding NavigateToProfileCommand}" Grid.Row="11" Grid.Column="0"></Button>
                    <Button Text="Progress" Command="{Binding NavigateToProgressCommand}" Grid.Row="11" Grid.Column="1"></Button>
                </Grid>
            </StackLayout>
        </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>