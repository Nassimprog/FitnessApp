<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FitnessApp.Views.ProgressPage"
             xmlns:views="clr-namespace:FitnessApp.Views"
             xmlns:viewModels="clr-namespace:FitnessApp.ViewModels"
             BackgroundColor="#32353B">
    
    <ContentPage.BindingContext>
        <viewModels:ProgressPageViewModel></viewModels:ProgressPageViewModel>
    </ContentPage.BindingContext>

    <ContentPage.Content>
        <StackLayout Margin ="20" HorizontalOptions="CenterAndExpand">


            <Label Text="Progress" FontSize="Title" TextColor="WhiteSmoke"></Label>
            <StackLayout>
                <Grid>
                    <Button Text="Tracker" Command="{Binding NavigateToTrackerCommand}" Grid.Row="11" Grid.Column="0"></Button>
                    <Button Text="Profile" Command="{Binding NavigateToProfileCommand}" Grid.Row="11" Grid.Column="1"></Button>
                </Grid>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>